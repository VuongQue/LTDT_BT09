<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Toolbar giả lập -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FF3B30"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="< Back"
            android:textColor="#FFFFFF"
            android:padding="16dp"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hồ sơ cá nhân"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btnBack"
        android:layout_marginTop="56dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="24dp">

            <!-- Avatar -->
            <ImageView
                android:id="@+id/imgProfileAvatar"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/pro_trung"
                android:scaleType="centerCrop"
                android:layout_marginBottom="24dp"
                android:background="@drawable/circle_bg" />

            <!-- Thông tin cá nhân -->
            <TextView android:text="Mã ID"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView android:id="@+id/tvProfileId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3"
                android:layout_marginBottom="8dp"/>

            <TextView android:text="Tên đăng nhập"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView android:id="@+id/tvProfileUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="trung1"
                android:layout_marginBottom="8dp"/>

            <TextView android:text="Họ tên"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView android:id="@+id/tvProfileFullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nguyễn Hữu Trung"
                android:layout_marginBottom="8dp"/>

            <TextView android:text="Email"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView android:id="@+id/tvProfileEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="trung2@gmail.com"
                android:layout_marginBottom="8dp"/>

            <TextView android:text="Giới tính"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView android:id="@+id/tvProfileGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Male"
                android:layout_marginBottom="16dp"/>

            <!-- Nút đăng xuất -->
            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đăng Xuất"
                android:backgroundTint="#FF3B30"
                android:textColor="#FFFFFF"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:padding="12dp"
                android:textStyle="bold"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>